<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
	android:background="#cc000000"
	android:id="@+id/layout_settings"
	android:visibility="gone">
	<com.cremamobile.filemanager.settingview.SlideAnimationLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:id="@+id/layout_settingButtons">
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
		    <Button
		        android:id="@+id/setting_copy"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/copy"/>
		    <Button
		        android:id="@+id/setting_move"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/move"/>
		    <Button
		        android:id="@+id/setting_rename"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/rename"/>
		    <Button
		        android:id="@+id/setting_newfolder"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/new_folder"/>
		</LinearLayout>
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
		    <Button
		        android:id="@+id/setting_sort"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/sort"/>
		    <Button
		        android:id="@+id/setting_share"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/share"/>
		    <Button
		        android:id="@+id/setting_refresh"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/refresh"/>
		    <Button
		        android:id="@+id/setting_setting"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/settings"/>
		    
		</LinearLayout>
	</com.cremamobile.filemanager.settingview.SlideAnimationLayout>
</LinearLayout>
